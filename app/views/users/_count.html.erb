<table class='table table-bordered'>
  <thead>
    <tr>
      <th>今日の投稿数</th>
      <th>前日の投稿数</th>
      <th>前日比</th>
    </tr>
    <tr>
      <td><%= @today_book.count %></td>
      <td><%= @yesterday_book.count %></td>
      <td>
        <% if @yesterday_book.count == 0 %>
          <%= @today_book.count * 100 %>%
        <% else %>
          <%= (@day_deff * 100).round %>%
        <% end %>
      </td>
    </tr>
  </thead>
</table>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>今週の投稿数</th>
      <th>先週の投稿数</th>
      <th>前週比</th>
    </tr>
    <tr>
      <td><%= @this_week_book.count %></td>
      <td><%= @last_week_book.count %></td>
      <td>
        <% if @last_week_book.count == 0 %>
          <%= @this_week_book.count * 100 %>%
        <% else %>
          <%= (@week_deff * 100).round %>%
        <% end %>
      </td>
    </tr>
  </thead>
</table>

  Date(インスタント変数)-7: <%= Date.today-7 %><br>
  Date.today-1: <%= Date.today-1 %><br>
  Date.current: <%= Date.current %><br>
  Time.now: <%= Time.now %><br>
  Time.now-1.day: <%= Time.now-1.day %><br>
  Time.current-1.day: <%= Time.current-1.day %><br>
  Time.current.strftime('%Y,%m,%d'): <%= Time.current.strftime('%Y,%m,%d') %><br>