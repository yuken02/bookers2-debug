<table class='table table-bordered'>
  <thead>
    <tr>
      <th>今日の投稿数</th>
      <th>前日の投稿数</th>
      <th>前日比</th>
    </tr>
    <tr>
      <td><%= @today_books.count %></td>
      <td><%= @yesterday_books.count %></td>
      <td>
        <% if @yesterday_books.count == 0 %>
          <%= @today_books.count * 100 %>%
        <% else %>
          <%= (@day_deff * 100).round %>%
        <% end %>
      </td>
    </tr>
  </thead>
</table>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>今週の投稿数</th>
      <th>先週の投稿数</th>
      <th>前週比</th>
    </tr>
    <tr>
      <td><%= @this_week_books.count %></td>
      <td><%= @last_week_books.count %></td>
      <td>
        <% if @last_week_books.count == 0 %>
          <%= @this_week_books.count * 100 %>%
        <% else %>
          <%= (@week_deff * 100).round %>%
        <% end %>
      </td>
    </tr>
  </thead>
</table>