<% if book.favorited_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(book), remote: true , method: :delete do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </td>
<% else %>
  <td>
    <%= link_to book_favorites_path(book), remote: true , method: :post do %>
      ♡<%= book.favorites.count %>
    <% end %>
  </td>
<% end %>